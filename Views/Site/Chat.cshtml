<style>


    .fix_chat {
        position: relative;
    }

    .group_chat {
        flex-basis: 330px;
        background-color: #FFFFFF;
        flex-shrink: 0
    }

    .bar_chat button,
    .open_chat_mobile {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 35px;
        height: 35px;
        color: var(--main)
    }

    .box_chat_user {
        border-top: 1px solid var(--gray);
        cursor: pointer;
        margin: 0px 5px
    }

        .box_chat_user.active {
            background: #EEE
        }

        .box_chat_user p {
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
            max-width: 300px;
        }


    .height_chat {
        height: 350px;
    }

    .over_scroll_chat {
        overflow-y: auto;
        overflow-x: hidden;
    }

    .view_all_chat {
        position: relative
    }

    .no_chat {
        position: absolute;
        width: calc(100% + 1px);
        
        height: 100%;
        background: #FFFFFF;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .body_chat {
        border: 1px solid var(--gray)
    }

    .sent_chat {
        display: flex;
        padding: 5px;
        margin: 5px 0px
    }

        .sent_chat > div {
            max-width: 65%;
            padding: 10px;
        }

            .sent_chat > div > p {
                margin-bottom: 10px
            }

    .content_receive {
        justify-content: flex-end
    }

    .sent_chat .receive {
        border-radius: 0px 10px 10px 10px;
        background-color: gray;
        color: #FFFFFF
    }

    .sent_chat .sent {
        border-radius: 10px 0px 10px 10px;
        box-shadow: 3px 3px 3px 1px #EEE,-3px -3px 3px 1px #EEE
    }


    .writ_massage textarea {
        height: 45px;
        min-height: 45px;
    }

    .writ_massage button {
        width: 50px;
        height: 45px;
        background-color: aqua;
        color: #FFFFFF;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 20px;
        margin-right: 5px;
        border: 2px solid red;
        border-radius: 10px
    }

        .writ_massage button:hover {
            background: #FFFFFF;
            color: var(--main);
        }

    .p-10 {
        padding: 10px;
    }

    .sec-marg {
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .mb-10 {
        margin-bottom: 10px;
    }


    .form-control {
        border-radius: 10px;
        padding: 7px;
        margin: 10px 0;
        box-shadow: 0 0 3px #ccc;
        background: #FAFAFA;
        height: 50px;
    }





    @@media(max-width:767px) {

        .group_chat {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0px;
            left: 0px;
            z-index: 5;
        }


        .open_chat_mobile {
            display: block !important
        }
    }
</style>





