@section scripts {
    <script>
        $(".box_chat_user").on("click", function () {

            $(this).addClass("active").siblings().removeClass("active");

            $(".no_chat").fadeOut();

            $(this).parents(".group_chat").animate({
                "left": "-150%"
            }, 300);

        });


        $(".open_chat_mobile").on("click", function () {

            $(".group_chat").animate({
                "left": "0"
            }, 300);

        });

        $(".bar_chat button").on("click", function () {

            $(this).parents(".bar_head_chat").children("form").slideToggle(100);

        });

        $(".chat-content").animate({
            scrollTop: $('.chat-content').prop("scrollHeight")
        }, 1000);

        $('.form').on('submit', function (event) {
            event.preventDefault();
            var message = $('.content_sent').first().clone();
            message.find('p').text($('.input-custom-size').val());
            message.appendTo('.chat-content');
            $('input').val('');

            $(".chat-content").animate({
                scrollTop: $('.chat-content').prop("scrollHeight")
            }, 1000);

        });

    </script>
