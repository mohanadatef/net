@page
@model RegisterModel
@{
    ViewData["Title"] = "اضافة مستخدم";
}



<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form enctype="multipart/form-data" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">البربد الالكتروني</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                <label asp-for="Input.FullName">اسم المستخدم</label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>*@
                <div class="form-group">
                    <label asp-for="Input.Img">صورة شخصية</label>
                    <input type="file" asp-for="Input.Img" class="form-control" />
                    <span asp-validation-for="Input.Img" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">كلمة المرور</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">تاكيد كلمة المرور</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-new-style btn-rounded">اضافة</button>
            </form>
            <a asp-action="Index" asp-controller="Home" class="btn-black">العودة الى الرئيسية</a>
        </div>
        </div>
    </div>



        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
